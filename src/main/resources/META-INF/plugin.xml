<idea-plugin version="2">
  <id>org.univorleans.coq</id>
  <name>Plugin display name here</name>
  <version>1.0</version>
  <vendor email="frederic.dabrowski@univ-orleans.fr" url="http://www.univ-orleans.fr/">Universit√© d'Orleans</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <moduleType id="COQ_MODULE" implementationClass="org.univorleans.coq.modules.CoqModuleType"/>
    <fileTypeFactory implementation = "org.univorleans.coq.files.CoqFileTypeFactory"/>
    <internalFileTemplate name="Coq Module"/>
    <lang.parserDefinition language="Coq" implementationClass="org.univorleans.coq.parser.CoqParserDefinition"/>
    <lang.syntaxHighlighterFactory language="Coq" implementationClass="org.univorleans.coq.highlighter.CoqSyntaxHighlighterFactory"/>
    <colorSettingsPage implementation="org.univorleans.coq.config.CoqColorSettingsPage"/>
    <sdkType id="Coq" implementation="org.univorleans.coq.sdk.CoqSdkType"/>
    <compileServer.plugin classpath="coq-jps-plugin.jar"/>
    <lang.psiStructureViewFactory language="Coq" implementationClass="org.univorleans.coq.structure.CoqStructureViewFactory"/>
    <treeStructureProvider implementation="org.univorleans.coq.structure.CoqTreeStructureProvider"/>
    <lang.formatter language="Coq" implementationClass="org.univorleans.coq.formatter.CoqFormattingModelBuilder"/>
    <!-- Add your extensions here -->
    <toolWindow id="Coqtop Messages"  anchor="bottom"
                factoryClass="org.univorleans.coq.toolWindows.CoqtopMessageView"/>
    <toolWindow id="Coq Proof tree" anchor="right"
                factoryClass="org.univorleans.coq.toolWindows.CoqtopProofView"/>
  </extensions>

  <actions>
    <action id="org.univorleans.coq.actions.NewCoqFileAction" class="org.univorleans.coq.actions.NewCoqFileAction"
            icon="/icons/coq.png"
            text="Coq Module" description="Create new Coq module">
        <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
    </action>
    <action id="org.univorleans.coq.actions.TestAction" class="org.univorleans.coq.actions.TestAction">
      <add-to-group group-id="ToolsMenu" relative-to-action="GenerateJavadoc" anchor="after"/>
    </action>
    <!-- Add your actions here -->
    <group id="CoqMenu" text="Coq" description="Coq actions"  popup="false" >
      <separator/>

      <action id="org.intellij.coq.actions.NextAction" class="org.univorleans.coq.actions.NextAction" text="Next"
              description="Next Line">
        <keyboard-shortcut first-keystroke="control alt DOWN" keymap="$default"/>
      </action>
      <action id="org.intellij.coq.actions.BackAction" class="org.univorleans.coq.actions.BackAction" text="Undo"
              description="Last Line">
        <keyboard-shortcut first-keystroke="control alt UP" keymap="$default"/>
      </action>
      <action id="org.intellij.coq.actions.UseAction" class="org.univorleans.coq.actions.UseAction" text="Use"
              description="End of file">
        <keyboard-shortcut first-keystroke="control alt RIGHT" keymap="$default"/>
      </action>
      <action id="org.intellij.coq.actions.RetractAction" class="org.univorleans.coq.actions.RetractAction" text="Retract"
              description="Last Line">
        <keyboard-shortcut first-keystroke="control alt LEFT" keymap="$default"/>
      </action>
      <action id="org.intellij.coq.actions.GotoAction" class="org.univorleans.coq.actions.GotoAction" text="Go to cursor"
              description="Last Line">
        <keyboard-shortcut first-keystroke="control alt ENTER" keymap="$default"/>
      </action>
      <separator/>
      <!-- <add-to-group group-id="MainMenu" relative-to-action="ToolsMenu" anchor="before"/>-->
      <add-to-group group-id="RunMenu" relative-to-action="Runner.Layout" anchor="before"/>
      <action id="org.intellij.coq.actions.StopAction" class="org.univorleans.coq.actions.StopAction" text="Stop coqtop"
              description="Last Line">
      </action>
    </group>

  </actions>

  <application-components>
    <component>
      <implementation-class>org.univorleans.coq.idea.AppComponent</implementation-class>
    </component>
  </application-components>

  <project-components>
    <component>
      <implementation-class>org.univorleans.coq.compilation.CoqdependenciesManager</implementation-class>
    </component>
  </project-components>


</idea-plugin>