<idea-plugin version="2">
  <id>org.univorleans.coq</id>
  <name>Plugin display name here</name>
  <version>1.0</version>
  <vendor email="frederic.dabrowski@univ-orleans.fr" url="http://www.univ-orleans.fr/">Universit√© d'Orleans</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <moduleType id="COQ_MODULE" implementationClass="org.univorleans.coq.modules.CoqModuleType"/>
    <fileTypeFactory implementation = "org.univorleans.coq.virtualFiles.CoqFileTypeFactory"/>
    <internalFileTemplate name="Coq Module"/>
    <sdkType id="Coq" implementation="org.univorleans.coq.sdk.CoqSdkType"/>
    <compileServer.plugin classpath="coq-jps-plugin.jar"/>
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <action id="org.univorleans.coq.actions.NewCoqFileAction" class="org.univorleans.coq.actions.NewCoqFileAction"
            icon="/icons/coq.png"
            text="Coq Module" description="Create new Coq module">
        <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
    </action>
    <action id="org.univorleans.coq.actions.TestAction" class="org.univorleans.coq.actions.TestAction">
      <add-to-group group-id="ToolsMenu" relative-to-action="GenerateJavadoc" anchor="after"/>
    </action>
    <!-- Add your actions here -->
  </actions>

  <project-components>
    <component>
      <implementation-class>org.univorleans.coq.compilation.CoqdependenciesManager</implementation-class>
    </component>
  </project-components>


</idea-plugin>